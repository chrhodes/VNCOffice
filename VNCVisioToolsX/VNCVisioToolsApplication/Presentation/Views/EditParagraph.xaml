                    	ToolTip="tooltip" />
                </dxlc:LayoutItem>
                
                <dxlc:LayoutItem Label="Flags">
                    <dxe:TextEdit x:Name="teFlags"
                		Text="{Binding Paragraph.Flags}"
                    	ToolTip="tooltip"/>
