                </dxlc:LayoutItem>

                <dxlc:LayoutItem Label="Bullet">
                    <dxe:TextEdit x:Name="teBullet"
                		Text="{Binding Paragraph.Bullet}"
                    	ToolTip="tooltip"/>
                </dxlc:LayoutItem>
                
                <dxlc:LayoutItem Label="BulletString">
                    <dxe:TextEdit x:Name="teBulletString"
                		Text="{Binding Paragraph.BulletString}"
