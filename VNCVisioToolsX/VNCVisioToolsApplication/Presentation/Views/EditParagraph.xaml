                    	ToolTip="tooltip"/>
                </dxlc:LayoutItem>

                <dxlc:LayoutItem Label="HAlign">
                    <dxe:TextEdit x:Name="teHAlign"
                		Text="{Binding Paragraph.HAlign}"
                    	ToolTip="tooltip" />
                </dxlc:LayoutItem>

